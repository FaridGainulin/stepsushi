@font-face
  font-family: "DrukTextWideCyr-medium"
  src: url('../fonts/druktextwidecyr-medium.woff'), url('../fonts/druktextwidecyr-medium.woff2')
  font-display: swap
@font-face
  font-family: "FuturaPT-Book"
  src: url('../fonts/FuturaPT-Book.woff'), url('../fonts/FuturaPT-Book.woff2')
  font-display: swap
@font-face
  font-family: "FuturaPT-Demi"
  src: url('../fonts/FuturaPT-Demi.woff'), url('../fonts/FuturaPT-Demi.woff2')
  font-display: swap
@font-face
  font-family: "FuturaPT-Heavy"
  src: url('../fonts/FuturaPT-Heavy.woff'), url('../fonts/FuturaPT-Heavy.woff2')
  font-display: swap



@import 'common/variables'
@import 'common/*'
@import 'components/*'

body
  margin: 0 auto
  font-size: 18px
  font-family: "FuturaPT-Book"
  font-weight: 400
  line-height: 120%
  color $color-text

.layout
  width: 100%
  height: 100%
  margin: 0 auto
  display: flex
  flex-direction: column
  overflow-x: hidden

.main
  flex: 1

.wrapper
  max-width: 320px
  margin: 0 auto
  padding: 0 6px
  width 100%
  +above($breakpoints.sm)
    max-width: 750px
    padding: 0 12px
  +above($breakpoints.md)
    max-width: 996px
    padding: 0 15px
  +above($breakpoints.xxl)
    padding: 0 20px
    max-width: 1240px
