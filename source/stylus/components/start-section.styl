.start-section
  // background-image: url('../images/start-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #fff

  &__container
    position relative
    padding 0 0 20px 0
    +above($breakpoints.sm)
      padding 60px 0 60px 0
    +above($breakpoints.md)
      padding 90px 0 90px 0
    +above($breakpoints.xxl)
      padding 130px 0 130px 0

  &__title
    text-align: center
    padding 0 0 20px 0
    +above($breakpoints.sm)
      text-align: start
      padding 0 0 30px 0
    +above($breakpoints.md)
      padding 0 0 40px 0
    +above($breakpoints.xxl)
      padding 0 0 50px 0

  &__items
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      gap: 10px
    +above($breakpoints.md)
      gap: 20px
    +above($breakpoints.xxl)
      gap: 30px

  &__item
    display: flex
    flex-direction: row
    align-items: center
    gap: 10px
    width 260px !important
    +above($breakpoints.sm)
      width 490px !important
    +above($breakpoints.md)
      width 670px !important
      gap: 15px
    +above($breakpoints.xxl)
      height: 31px
      gap: 20px

  &__item-num
    color: #9B9B9B
    text-transform: uppercase

  &__bottom-title
    text-align: center
    font-size: 11px !important
    +above($breakpoints.sm)
      font-size: 14px !important
      text-align: start
    +above($breakpoints.md)
      font-size: 16px !important
    +above($breakpoints.xxl)
      font-size: 22px !important

  &__img
    width 120px
    height: auto
    margin 0 auto
    +above($breakpoints.sm)
      margin 0
      position: absolute
      width: 230px;
      top: 75px;
      right: 13px;
    +above($breakpoints.md)
      width: 340px;
      top: 91px;
      right: 49px;
    +above($breakpoints.xxl)
      width: 461px;
      top: 130px;
      right: 86px;

  &__bottom
    background-color #020202
    color: #fff
    border-radius: 30px
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    padding 20px
    +above($breakpoints.sm)
      flex-direction: row
      justify-content space-between
      border-radius: 35px
      padding 30px
      margin-top 30px
    +above($breakpoints.md)
      border-radius: 40px
      padding 50px
      margin-top 50px
    +above($breakpoints.xxl)
      margin-top 80px
      padding 60px 60px 59px 60px
      border-radius: 50px

.item-num-color
  background: linear-gradient(147deg, #ff3228 0%, #ff8b0e 100%);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;

.start-item
  width 260px !important
  +above($breakpoints.sm)
    width 190px !important
  +above($breakpoints.md)
    width 280px !important
  +above($breakpoints.xxl)
    width 308px !important
