.button-next,
.button-prev
  display: none
  +above($breakpoints.sm)
    display: block
    border-radius: 50%
    position: absolute
    z-index 1
.button-next,
.button-prev
  img
    width 30px
    height: auto
    +above($breakpoints.md)
      width 48px

.button-prev
  +above($breakpoints.sm)
    transform: rotateY(180deg)
    top: 298px
    right: -15px
  +above($breakpoints.md)
    top: 380px
    right: -24px
  +above($breakpoints.xxl)
    top: 471px
    right: -24px

.button-next
  +above($breakpoints.sm)
    top: 298px;
    left: -15px;
  +above($breakpoints.md)
    top: 380px;
    left: -24px;
  +above($breakpoints.xxl)
    top: 471px;
    left: -24px;

