.main-section
  background-color #020202
  width 100%
  max-width: 380px
  margin 0 auto
  height: auto
  border-radius: 30px
  +above($breakpoints.sm)
    background-image: url('../images/main-section-bg.jpg')
    background-repeat: no-repeat
    background-position: center
    background-size: cover
    max-width: 800px
    border-radius: 50px
  +above($breakpoints.md)
    max-width: 1100px
    border-radius: 80px
  +above($breakpoints.xxl)
    max-width: 1300px
    border-radius: 110px
  +above($breakpoints.xxxxl)
    max-width 1800px
    border-radius: 150px

  &__container
    position relative
    color: #fff
    padding 20px 0 0 0
    +above($breakpoints.sm)
      padding 30px 0 30px 0
    +above($breakpoints.md)
      padding 80px 0 80px 0
    +above($breakpoints.xxl)
      padding 120px 0 100px 0
    +above($breakpoints.xxxxl)
      padding 150px 0 131px 0

  &__title,
  &__sub-title
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__sub-title
    padding 15px 0 15px 0
    +above($breakpoints.sm)
      padding 30px 0 40px 0
    +above($breakpoints.md)
      padding 35px 0 50px 0
    +above($breakpoints.xxl)
      padding 40px 0 70px 0

  &__bottom
    border: 1px solid #fff
    background: rgba(0, 0, 0, 0.5)
    border-radius: 20px
    width 300px
    margin 0 auto
    padding 20px
    +above($breakpoints.sm)
      margin 0
      border-radius: 30px
      width 300px
      padding 25px
    +above($breakpoints.md)
      border-radius: 40px
      width 380px
      padding 30px
    +above($breakpoints.xxl)
      padding 37px 40px 40px 40px
      width 432px
      border-radius: 50px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 6px
    +above($breakpoints.md)
      gap: 10px

  &__privacy
    color: #9B9B9B
    padding-top 10px
    text-align: center
    +above($breakpoints.md)
      padding-top 16px

  &__privacy-link
    color: #A76439
    cursor pointer
    text-decoration: underline

  &__img
    width 300px
    height: auto
    margin 0 auto
    +above($breakpoints.sm)
      display: none
