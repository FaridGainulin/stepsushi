.support-section
  // background-image: url('../images/support-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #fff

  &__container
    position relative

  &__img
    width 120px
    height: auto
    margin 0 auto
    +above($breakpoints.sm)
      position: absolute
      width 240px
      top: 0
      left: 0
    +above($breakpoints.md)
      width 350px
      top: 0
      left: 0
    +above($breakpoints.xxl)
      width 457px
      top: 0
      left: 0

  &__box
    padding 20px 0 1px 0
    +above($breakpoints.sm)
      padding 50px 0 50px 0
      margin-left 300px
    +above($breakpoints.md)
      padding 80px 0 80px 0
      margin-left 460px
    +above($breakpoints.xxl)
      padding 130px 0 130px 0
      margin-left 607px

  &__title
    padding 0 0 20px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 0 0 30px 0
    +above($breakpoints.md)
      padding 0 0 30px 0
    +above($breakpoints.xxl)
      padding 0 0 36px 0

  &__items
    +above($breakpoints.sm)
      display: flex
      flex-direction: column

  &__item
    display: flex
    flex-direction: row
    align-items: center
    justify-content space-between
    gap: 20px
    width 250px !important
    height: 50px
    border 1px solid #020202
    border-radius: 10px
    padding 15px
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 0
      border: none
      border-radius: 0
      width 420px !important
      height: 44px
    +above($breakpoints.md)
      width 500px !important
      height: 60px
    +above($breakpoints.xxl)
      width 592px !important
      height: 77px

  &__item-icon
    width 30px
    height: auto
    +above($breakpoints.md)
      width 35px
    +above($breakpoints.xxl)
      width 40px

.item-borders
  +above($breakpoints.sm)
    border-top: 1px solid #020202
    border-bottom: 1px solid #020202
