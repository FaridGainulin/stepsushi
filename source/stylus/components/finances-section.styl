.finances-section
  // background-image: url('../images/finances-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #fff

  &__container
    position relative
    text-align: center
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 50px 0 50px 0
    +above($breakpoints.md)
      padding 80px 0 80px 0
    +above($breakpoints.xxl)
      padding 134px 0 130px 0

  &__title
    padding 0 0 20px 0
    +above($breakpoints.sm)
      padding 0 0 40px 0
    +above($breakpoints.md)
      padding 0 0 50px 0
    +above($breakpoints.xxl)
      padding 0 0 60px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: row
      flex-wrap: wrap
      justify-content center
      gap: 20px 10px
    +above($breakpoints.md)
      gap: 40px 20px
    +above($breakpoints.xxl)
      gap: 60px 20px

  &__card
    width 260px !important
    color: #fff
    background-color #020202
    padding 20px 10px
    border-radius: 30px
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    +above($breakpoints.sm)
      width 235px !important
      padding 30px 10px
      border-radius: 35px
    +above($breakpoints.md)
      gap: 20px
      width 308px !important
      padding 50px 10px
      border-radius: 40px
    +above($breakpoints.xxl)
      gap: 21px
      width 386px !important
      padding 60px 10px
      border-radius: 50px

  &__bottom-title
    padding 0 0 20px 0
    +above($breakpoints.sm)
      padding 40px 0 20px 0
    +above($breakpoints.md)
      padding 60px 0 20px 0
    +above($breakpoints.xxl)
      padding 80px 0 20px 0

  &__form
    display: flex
    flex-direction: column
    align-items: center
    justify-content center
    gap: 6px
    padding 20px 0 0 0
    +above($breakpoints.sm)
      flex-direction: row
    +above($breakpoints.md)
      gap: 10px
      padding 25px 0 0 0
    +above($breakpoints.xxl)
      padding 30px 0 0 0

  &__img-line-1
