.info-section
  background-image: url('../images/info-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #fff

  &__container
    color: #000
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 40px 0 60px 0
    +above($breakpoints.md)
      padding 80px 0 100px 0
    +above($breakpoints.xxl)
      padding 124px 0 148px 0

  &__title,
  &__text
    text-align: center
    color: $color-blue

  &__title
    line-height 140%

  &__text
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 30px 0 30px 0
    +above($breakpoints.md)
      padding 35px 0 35px 0
    +above($breakpoints.xxl)
      padding 40px 0 45px 0

  &__content
    display: flex
    flex-direction: column
    gap: 8px
    padding-left 10px
    +above($breakpoints.sm)
      padding-left 135px
    +above($breakpoints.md)
      padding-left 190px
    +above($breakpoints.xxl)
      padding-left 239px

  &__item
    display: flex
    flex-direction: row
    align-items: center
    gap: 10px
    +above($breakpoints.md)
      gap: 26px

  &__icon
    width 20px
    height: auto
    +above($breakpoints.md)
      width 32px

  &__bottom
    background-image: url('../images/info-section-bottom-bg.jpg')
    background-repeat: no-repeat
    background-position: center
    background-size: cover
    background-color #2F2483
    border-radius: 20px
    padding 20px
    margin-top 20px
    +above($breakpoints.sm)
      padding 30px 20px
      margin-top 40px
    +above($breakpoints.md)
      border-radius: 30px
      padding 49px 70px 45px 50px
      margin-top 70px
    +above($breakpoints.xxl)
      margin-top 93px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    justify-content center
    gap: 8px
    +above($breakpoints.sm)
      flex-direction: row
    +above($breakpoints.md)
      gap: 20px

.info-item
  +above($breakpoints.sm)
    width 223px
  +above($breakpoints.md)
    width 268px
  +above($breakpoints.xxl)
    width 340px
