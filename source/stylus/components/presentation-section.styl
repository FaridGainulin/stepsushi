.presentation-section
  background-color #F7F5FF

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 40px 0 0 0
      margin-bottom -70px
    +above($breakpoints.md)
      padding 50px 0 0 0
      margin-bottom -110px
    +above($breakpoints.xxl)
      margin-bottom -202px
      padding 60px 0 0 0

  &__title
    text-align: center
    color: #352E4E
    padding 0 0 20px 0
    +above($breakpoints.sm)
      padding 0 0 25px 0
    +above($breakpoints.md)
      padding 0 0 30px 0
    +above($breakpoints.xxl)
      padding 0 0 30px 0

  &__card
    width 308px !important
    border-radius: 20px
    +above($breakpoints.sm)
      width 726px !important
    +above($breakpoints.md)
      width 966px !important
    +above($breakpoints.xxl)
      width 1170px !important

  &__img
    width 308px
    height: auto
    border-radius: 20px
    +above($breakpoints.sm)
      width 726px
    +above($breakpoints.md)
      width 966px
    +above($breakpoints.xxl)
      width 1170px


